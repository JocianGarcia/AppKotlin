<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/idtxtMex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Transformaciónes de México"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="25dp"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/btn1Tran"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="1 Transformación"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idtxtMex" />

    <Button
        android:id="@+id/btn2Tran"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="2 Transformación"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1Tran" />

    <Button
        android:id="@+id/btn3Tran"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="3 Transformación"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnSalir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn2Tran" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Salir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn3Tran" />


</androidx.constraintlayout.widget.ConstraintLayout>